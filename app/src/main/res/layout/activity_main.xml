<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">



    <ImageButton
        android:id="@+id/buttonUso"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#70FFFFFF"
        android:background="@drawable/tarjeta_inicio"
        android:layout_centerHorizontal="true"
        android:text="Modo Uso" />

    <ImageButton
        android:id="@+id/buttonConfiguracion"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="230dp"
        android:backgroundTint="#70FFFFFF"
        android:background="@drawable/ajustes_inicio"
        android:layout_centerHorizontal="true"
        android:text="Modo Configuracion" />

    <ImageButton
        android:id="@+id/buttonDatos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="#70FFFFFF"
        android:background="@drawable/lista"
        android:layout_centerHorizontal="true"
        android:text="Modo Configuracion" />




</RelativeLayout>