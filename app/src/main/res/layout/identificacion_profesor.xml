<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdentificacionProfesor"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:background="@drawable/boton_redondo"
        android:text="Siguiente" />

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="4dp"
        android:background="@drawable/corners2"
        android:backgroundTint="#70FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:radius="20dp"
        android:theme="?attr/actionBarTheme"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="4dp"
        android:background="@drawable/corners2"
        android:backgroundTint="#70FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:radius="20dp"
        android:theme="?attr/actionBarTheme"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:text="IDENTIFICACIÃ“N PROFESOR"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:text="DATOS PROFESOR IDENTIFICADO"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnVerDatos"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textColor="#31588B"
        android:drawableLeft="@drawable/identificacion"
        android:backgroundTint="#70FFFFFF"
        android:text="  Ver Datos"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center_horizontal"
        android:text="Acerque la tarjeta para leer Identificador"
        android:textColor="#0A0F4C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/corners3"
        android:backgroundTint="#70FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginTop="280dp"
        android:theme="?attr/actionBarTheme"
        android:layout_centerHorizontal="true"/>

    <TextView android:textColor="#31588B" android:textStyle="bold"  android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Identificador:" android:layout_marginTop="310dp" android:layout_marginLeft="35dp" android:id="@+id/textView4"/>

    <TextView android:textColor="#31588B" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="160dp" android:layout_marginTop="310dp" android:id="@+id/textIdentificador"/>

    <TextView android:textColor="#31588B" android:textStyle="bold" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Dni:" android:layout_marginTop="350dp" android:layout_marginLeft="35dp" android:id="@+id/textView5"/>

    <TextView android:textColor="#31588B" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content"  android:layout_marginTop="350dp" android:layout_marginLeft="80dp" android:id="@+id/textDni"/>

    <TextView android:textColor="#31588B" android:textStyle="bold" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Nombre:" android:layout_marginTop="390dp" android:layout_marginLeft="35dp" android:id="@+id/textView6"/>

    <TextView android:textColor="#31588B" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content"  android:layout_marginTop="390dp" android:layout_marginLeft="120dp" android:id="@+id/textNombre"/>




</RelativeLayout>