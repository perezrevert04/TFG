<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".DatosXml">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="5dp"
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:elevation="4dp"
        android:background="@drawable/corners2"
        android:backgroundTint="#70FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:radius="20dp"
        android:theme="?attr/actionBarTheme"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:text="BÃšSCAR DATOS PARTE"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/corners4"
        android:backgroundTint="#70FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginTop="60dp"
        android:theme="?attr/actionBarTheme"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:background="@drawable/boton_redondo"
        android:text="Siguiente" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="110dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="270dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#31588B"
        android:prompt="@string/Spinner_Asignatura" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="110dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="270dp"
        android:textSize="20sp"
        android:textColor="#31588B"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textFecha"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="220dp"
        android:inputType="date"
        android:textSize="20sp"
        android:textColor="#31588B"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Asignatura"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Grupo"
        android:layout_marginTop="140dp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Fecha"
        android:layout_marginTop="190dp"
        android:textStyle="bold"
        android:textColor="#31588B"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"/>


</RelativeLayout>