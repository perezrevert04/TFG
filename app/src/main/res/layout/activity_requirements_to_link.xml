<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.link.RequirementsToLinkActivity" >

    <Button
        android:id="@+id/buttonNext"
        style="@style/AppTheme.PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/ic_baseline_play_arrow_24"
        android:paddingStart="@dimen/btn_drawable_padding_start"
        android:paddingEnd="@dimen/btn_drawable_padding_end"
        android:text="Comenzar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView43"
                style="@style/Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Información"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView44"
                style="@style/Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Para poder utilizar Parte de firmas UPV necesitas vincular una tarjeta al dispositivo."
                app:layout_constraintEnd_toEndOf="@+id/textView43"
                app:layout_constraintStart_toStartOf="@+id/textView43"
                app:layout_constraintTop_toBottomOf="@+id/textView43" />

            <TextView
                android:id="@+id/textViewFirst"
                style="@style/Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Acceso a internet."
                app:layout_constraintEnd_toEndOf="@+id/textView14"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textViewSecond"
                style="@style/Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2. Que el dispositivo tenga asociadas credenciales biométricas."
                app:layout_constraintEnd_toEndOf="@+id/textViewFirst"
                app:layout_constraintStart_toStartOf="@+id/textViewFirst"
                app:layout_constraintTop_toBottomOf="@+id/textViewFirst" />

            <TextView
                android:id="@+id/textViewThird"
                style="@style/Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="3. Tener a mano el carnet de la UPV."
                app:layout_constraintEnd_toEndOf="@+id/textViewSecond"
                app:layout_constraintStart_toStartOf="@+id/textViewSecond"
                app:layout_constraintTop_toBottomOf="@+id/textViewSecond" />

            <TextView
                android:id="@+id/textViewFourth"
                style="@style/Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text='4. Que, en las siguentes pantallas, permitas a "Parte Firmas UPV" hacer fotos y grabar vídeos.'
                app:layout_constraintEnd_toEndOf="@+id/textViewThird"
                app:layout_constraintStart_toStartOf="@+id/textViewThird"
                app:layout_constraintTop_toBottomOf="@+id/textViewThird" />

            <TextView
                android:id="@+id/textViewFifth"
                style="@style/Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="5. Que el dispositivo disponga de tecnología NFC."
                app:layout_constraintEnd_toEndOf="@+id/textViewThird"
                app:layout_constraintStart_toStartOf="@+id/textViewThird"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView14"
                style="@style/Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Requisitos para completar este proceso"
                app:layout_constraintEnd_toEndOf="@+id/textView44"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView44"
                app:layout_constraintTop_toBottomOf="@+id/textView44" />

            <TextView
                android:id="@+id/textView17"
                style="@style/Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Si eres alumno"
                app:layout_constraintEnd_toEndOf="@+id/textViewFourth"
                app:layout_constraintStart_toStartOf="@+id/textViewFourth"
                app:layout_constraintTop_toBottomOf="@+id/textViewFourth" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>