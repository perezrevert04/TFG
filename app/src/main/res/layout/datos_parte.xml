        android:layout_height="60dp"
        app:elevation="4dp"
        android:background="@drawable/corners2"
        android:backgroundTint="#70FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:radius="20dp"
        android:theme="?attr/actionBarTheme"
        android:layout_centerHorizontal="true"/>

